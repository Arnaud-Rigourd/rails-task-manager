<h1>My tasks</h1>

<ul>
  <% @task.each do |t| %>
    <li>
      <%= link_to t.title, task_path(t.id) %> -
      <%= link_to 'Delete task', delete_task_path(t.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to "+ Add a new task", new_task_path %></p>
